<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinearLayoutActivity" >
	
       	<TextView
         android:id="@+id/mText"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="请猜出‘红心A’"
         android:textSize="25sp"
         
         >
         
     </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
        android:id="@+id/mImage01"
        android:layout_width="142px"
        android:layout_height="160px"
        android:src="@drawable/p02" />

    	<ImageView
        android:id="@+id/mImage02"
        android:layout_width="142px"
        android:layout_height="160px"
        android:src="@drawable/p03"/>

    	<ImageView
        android:id="@+id/mImage03"
        android:layout_width="142px"
        android:layout_height="160px"
        android:src="@drawable/p11" />
        
        
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
        android:id="@+id/mImage04"
        android:layout_width="142px"
        android:layout_height="160px"

        android:src="@drawable/p05"/>

    <ImageView
        android:id="@+id/mImage05"
        android:layout_width="142px"
        android:layout_height="160px"

        android:src="@drawable/p06"/>

    <ImageView
        android:id="@+id/mImage06"
        android:layout_width="142px"
        android:layout_height="160px"

        android:src="@drawable/p07" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
    
        <ImageView
        android:id="@+id/mImage07"
        android:layout_width="142px"
        android:layout_height="160px"

        android:src="@drawable/p08"/>

    <ImageView
        android:id="@+id/mImage08"
        android:layout_width="142px"
        android:layout_height="160px"

        android:src="@drawable/p09"/>

    <ImageView
        android:id="@+id/mImage09"
        android:layout_width="142px"
        android:layout_height="160px"

        android:src="@drawable/p10"/>
    </LinearLayout>
    
    
    
        <Button
        android:id="@+id/mButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="重玩一次" />
   	<TextView
         android:id="@+id/mScore"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="消息"
         android:textSize="18sp"
         
         >
         
     </TextView>

</LinearLayout>